               }
            },
            {
               "name": "Create Product",
               "request": {
                  "method": "POST",
                  "header": [],
                  "body": {
                     "mode": "formdata",
                     "formdata": [
                        {
                           "key": "name",
                           "value": "Test Product",
                           "type": "text"
                        },
                        {
                           "key": "description",
                           "value": "This is a test product",
                           "type": "text"
                        },
                        {
                           "key": "price",
                           "value": "99.99",
                           "type": "text"
                        },
                        {
                           "key": "stock_quantity",
                           "value": "50",
                           "type": "text"
                        },
                        {
                           "key": "category_id",
                           "value": "1",
                           "type": "text"
                        }
                     ]
                  },
                  "url": "{{base_url}}/api/admin/products"
               }
            },
            {
               "name": "Update Product",
               "request": {
                  "method": "PUT",
                  "header": [],
                  "body": {
                     "mode": "formdata",
                     "formdata": [
                        {
                           "key": "name",
                           "value": "Updated Product Name",
                           "type": "text"
                        },
                        {
                           "key": "price",
                           "value": "79.99",
                           "type": "text"
                        }
                     ]
                  },
                  "url": "{{base_url}}/api/admin/products/1"
               }
            },
            {
               "name": "Delete Product",
               "request": {
                  "method": "DELETE",
                  "header": [],
                  "url": "{{base_url}}/api/admin/products/1"
               }
            }
         ]
