{
   "info": {
      "name": "Marketplace Admin API",
      "description": "Admin panel API endpoints for marketplace application",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
   },
   "auth": {
      "type": "bearer",
      "bearer": [
         {
            "key": "token",
            "value": "{{access_token}}",
            "type": "string"
         }
      ]
   },
   "variable": [
      {
         "key": "base_url",
         "value": "http://localhost:5000",
         "type": "string"
      },
      {
         "key": "access_token",
         "value": "",
         "type": "string"
      }
   ],
   "item": [
      {
         "name": "Auth",
         "item": [
            {
               "name": "Login",
               "event": [
                  {
                     "listen": "test",
                     "script": {
                        "exec": [
                           "if (pm.response.code === 200) {",
                           "    var jsonData = pm.response.json();",
                           "    pm.collectionVariables.set('access_token', jsonData.access_token);",
                           "}"
                        ]
                     }
                  }
               ],
               "request": {
                  "method": "POST",
                  "header": [
                     {
                        "key": "Content-Type",
                        "value": "application/json"
                     }
                  ],
                  "body": {
                     "mode": "raw",
                     "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
                  },
                  "url": "{{base_url}}/api/auth/login"
               }
            },
            {
               "name": "Register",
               "request": {
                  "method": "POST",
                  "header": [
                     {
                        "key": "Content-Type",
                        "value": "application/json"
                     }
                  ],
                  "body": {
                     "mode": "raw",
                     "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"testuser\",\n  \"password\": \"password123\",\n  \"first_name\": \"Test\",\n  \"last_name\": \"User\"\n}"
                  },
                  "url": "{{base_url}}/api/auth/register"
               }
            },
            {
               "name": "Get Current User",
               "request": {
                  "method": "GET",
                  "header": [],
                  "url": "{{base_url}}/api/auth/me"
               }
            }
         ]
      },
