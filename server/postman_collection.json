                     "raw": "{{base_url}}/api/admin/products?page=1&per_page=20",
                     "query": [
                        {
                           "key": "page",
                           "value": "1"
                        },
                        {
                           "key": "per_page",
                           "value": "20"
                        },
                        {
                           "key": "search",
                           "value": "",
                           "disabled": true
                        },
                        {
                           "key": "category_id",
                           "value": "",
                           "disabled": true
                        }
                     ]
                  }
               }
            },
            {
               "name": "Get Single Product",
               "request": {
                  "method": "GET",
                  "header": [],
